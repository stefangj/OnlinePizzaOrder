@using PizzaProject.Models

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@Model.ImageUrl" alt="Picture of @Model.Name">
            <div class="caption">
                <h3 class="pull-right">$@Model.Price</h3>
                <h3>
                    <a>@Model.Name</a>
                </h3>
                <p>@Model.Description</p>
            </div>
            <div>
                @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", "Pizzas", new { id = Model.PizzaId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", "Pizzas", new { id = Model.PizzaId }, new { @class = "btn btn-danger" })
                }
                else
                {
                    <a href="@Url.Action("Order", "ShoppingCart", new { id = Model.PizzaId })" class="btn btn-warning text-center">
                        Add To Cart
                        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                    </a>
                }
                
            </div>
            </div>
        </div>


