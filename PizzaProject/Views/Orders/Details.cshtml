@model PizzaProject.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details of @Html.DisplayFor(model => model.OrderId) Order</h2>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>
</div>
<table style="text-align: center; width: 50%" class="table-responsive table-bordered table-striped">
    <tr>
        <th style="text-align: center;">Pizza</th>
        <th style="text-align: center;">Quantity</th>
        <th style="text-align: center;">Amount</th>
    </tr>
    @foreach (var item in Model.OrderDetails)
    {

        <tr>
            <td>
                @item.Pizza.Name
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                $@item.Price
            </td>
        </tr>
    }
</table>
<br />
<p>
    @Html.ActionLink("Back to Orders", "Index", null, new { @class = "btn btn-warning" })
</p>
